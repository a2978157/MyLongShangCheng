<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/mBotton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ECEAEA"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/zhuye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/zhuyeimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/shouye1"
                />
            <TextView
                android:id="@+id/zhuyetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#f00"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenlei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fenleiimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/fenlei" />
            <TextView
                android:id="@+id/fenleitxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gouwuche"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gouwucheimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/gouwuche" />
            <TextView
                android:id="@+id/gouwuchetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/wodeimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/wode" />
            <TextView
                android:id="@+id/wodetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>